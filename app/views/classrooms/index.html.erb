<center>
  <h1><td>Classroom</td></h1>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @classrooms.each do |classroom|%>
        <tr>          
          <td><%= link_to classroom.name, classroom %></td>
          <td><%= link_to 'Edit', edit_classroom_path(classroom.id), method: :get %></td>
          <td><%= link_to 'Delete', delete_classroom_path(classroom.id), method: :delete %></td>
          
        </tr>  
      <% end %>
    </tbody>
  </table>
  <br>
  
  <br>
  <%= link_to 'New classroom', new_classroom_path %>
</center>
 